<!DOCTYPE html>
<html>

	<body>
		<br>
		<% if @categories %>
			<legend align="center">Your subscriptions </legend>
			<div class="row justify-content-center align-items-center h-100">
					<div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">		
					<ul class="list-group">
				   	 	<% @categories.each do |categorie| %>
					  		<li class="list-group-item d-flex justify-content-between align-items-center"><%= categorie.name %></li> 
						<% end %>
					</ul>
				</div>
			</div>
		<% else %>
			<div>
				<legend align="center" >You have not yet subscribed to any categories</legend>
			<div>
		<% end %>
	</body>
</html>