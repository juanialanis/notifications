<!DOCTYPE html>
<html>

	<body>
        <div class="centraTabla">
       <table class="tabla">     
                <tr class="fila">
                        <th><h3> UPLOAD A DOCUMENT</h3></th>
                </tr>
                <tr>  
            		<td>
                        <% if @error %>
                        <p class="error"><%= @error %></p>
                        <% end %>
                        <% if @success %>
                        <p class="success"><%= @success %></p>
                        <% end %>
                        

                        <form action="/upload" method="post" enctype="multipart/form-data">
                        <p class="cuadrito">Date: <br><input type="date" name="date"></p>
                        <p class="cuadrito">Title: <br><input type="text" name="title"></p>
                        <p class="cuadrito">Users involved: <br><input type="" name="users"></p>
                        <p class="cuadrito">Categories: <select id="categories" name="categories">
                                        <% @categories.each do |category| %>
                                        <option value= <%= category.name %> > <%= category.name %> </option>
                                        <% end %>
                                    </select></p>
                        <p class="cuadrito">Document: <input type="file" name="document" accept=".pdf"></p>
                        <input  type="submit" value="UPLOAD" />
                    </td>
                </tr>    
	</body>
</html>
